<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="revolhope.splanes.com.presentation">

    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    <uses-feature android:name="android.hardware.fingerprint" android:required="false" />
    <uses-feature android:name="android.hardware.biometrics" android:required="false" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <application>
        <activity
            android:name=".feature.login.LoginActivity"
            android:theme="@style/Theme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".feature.register.RegisterActivity"
            android:theme="@style/Theme.NoActionBar"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".feature.dashboard.DashboardActivity"
            android:theme="@style/Theme.ActionBar"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".feature.entry.key.EntryKeyActivity"
            android:theme="@style/Theme.ActionBar"
            android:screenOrientation="portrait"/>

    </application>

</manifest>
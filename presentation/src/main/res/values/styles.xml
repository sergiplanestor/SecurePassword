<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Title">
        <item name="fontFamily">@font/lobstertwo_bold</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Text">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Header">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/text_big</item>
    </style>

    <style name="Text.Hint">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Text.Medium">
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/Text.Medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/colorPrimaryLight</item>
    </style>

    <style name="Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="rippleColor">@color/colorPrimaryLight</item>
    </style>

    <style name="Button.Link">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@null</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorPrimaryDark</item>
        <item name="hintTextColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/gray_tertiary</item>
        <item name="android:colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTextInputLayout.Password" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/colorPrimaryDark</item>
        <item name="hintTextColor">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorPrimaryDark</item>
        <item name="passwordToggleEnabled">true</item>
    </style>

    <style name="AppTextInputText">
        <item name="android:textColor">@color/gray_tertiary</item>
        <item name="android:textCursorDrawable">@drawable/shape_cursor_primary_color</item>
        <item name="android:textColorHighlight">@color/colorSecondaryLight</item>
        <item name="theme">@style/AppTextInputTextTheme</item>
    </style>

    <style name="AppTextInputTextTheme">
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorControlNormal">@color/gray_tertiary</item>
    </style>

    <style name="AppDialogStyle" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@drawable/shape_card_white</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:textAppearanceSmall">@style/Text</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/AppDialogButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AppDialogButton</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/AppDialogButton</item>
    </style>

    <style name="AppDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

</resources>